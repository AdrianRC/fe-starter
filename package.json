		"@theatre/core": "^0.7.2",
		"@theatre/studio": "^0.7.2",
		"@threlte/core": "^8.0.1",
		"@threlte/extras": "^9.0.1",
		"@threlte/theatre": "^3.0.0",
		"groq": "^3.76.1",
		"gsap": "^3.12.7",
		"three": "^0.173.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@sveltejs/kit",
			"esbuild",
			"svelte-preprocess"
		],
		"ignoredBuiltDependencies": [
			"sharp",
			"workerd"

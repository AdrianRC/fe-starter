		"@typescript-eslint/parser": "^8.24.1",
		"browserslist": "^4.24.4",
		"cssnano": "^7.0.6",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"postcss": "^8.5.3",
		"postcss-load-config": "^6.0.1",
		"postcss-preset-env": "^10.1.4",
		"prettier": "^3.5.1",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "5.20.2",
		"svelte-check": "^4.1.4",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^6.1.1",
		"vitest": "^3.0.6"
